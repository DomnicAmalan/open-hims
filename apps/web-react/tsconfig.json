{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@open-hims/types": ["../../packages/types/src"],
      "@open-hims/utils": ["../../packages/utils/src"],
      "@open-hims/web": ["../../packages/web/src"],
      "@open-hims/store": ["../../packages/store/src"],
      "@open-hims/screens-web": ["../../packages/screens-web/src"]
    }
  },
  "include": [
    "src/**/*"
  ]
}