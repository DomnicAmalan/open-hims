{
  "name": "@open-hims/monorepo",
  "version": "1.0.0",
  "description": "HIMS Core SDK - Monorepo for Rust & React Native Healthcare System",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck",
    "build:rust": "cargo build --release",
    "build:bindings": "cd bindings && cargo build --release",
    "install:deps": "pnpm install && cargo build",
    "dev:web": "cd apps/web-react && pnpm dev",
    "dev:mobile": "cd apps/mobile-react-native && pnpm start",
    "dev:desktop": "cd apps/desktop-tauri && pnpm tauri dev",
    "build:web": "cd apps/web-react && pnpm build",
    "build:mobile": "cd apps/mobile-react-native && pnpm build",
    "build:desktop": "cd apps/desktop-tauri && pnpm tauri build",
    "start:web": "cd apps/web-react && pnpm preview",
    "start:mobile": "cd apps/mobile-react-native && pnpm start",
    "type-check:web": "cd apps/web-react && pnpm type-check",
    "type-check:mobile": "cd apps/mobile-react-native && pnpm type-check",
    "type-check:desktop": "cd apps/desktop-tauri && pnpm build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.12.2",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.8.1"
  }
}