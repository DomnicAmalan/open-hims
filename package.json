{
  "name": "@open-hims/monorepo",
  "version": "1.0.0",
  "description": "HIMS Core SDK - Monorepo for Rust & React Native Healthcare System",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck",
    "build:rust": "cargo build --release",
    "build:bindings": "cd bindings && cargo build --release",
    "install:deps": "pnpm install && cargo build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.12.2",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.18.10"
  }
}