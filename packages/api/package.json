{
  "name": "@open-hims/api",
  "version": "1.0.0",
  "description": "API client and endpoints for HIMS healthcare system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@open-hims/types": "workspace:*",
    "axios": "^1.12.2"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "tsup": "^8.3.5"
  },
  "publishConfig": {
    "access": "restricted"
  }
}