{
  "name": "@open-hims/store",
  "version": "0.1.0",
  "description": "Shared Redux store for Open HIMS with platform-agnostic persistence",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "src/**"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@open-hims/types": "workspace:*",
    "@reduxjs/toolkit": "^1.9.7",
    "immer": "^10.1.3",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.9.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-redux": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "@react-native-async-storage/async-storage": {
      "optional": true
    },
    "expo-secure-store": {
      "optional": true
    },
    "@tauri-apps/plugin-store": {
      "optional": true
    },
    "@tauri-apps/api": {
      "optional": true
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./web": {
      "types": "./dist/web.d.ts",
      "import": "./dist/web.mjs",
      "require": "./dist/web.js"
    },
    "./mobile": {
      "types": "./dist/mobile.d.ts",
      "import": "./dist/mobile.mjs",
      "require": "./dist/mobile.js"
    },
    "./tauri": {
      "types": "./dist/tauri.d.ts",
      "import": "./dist/tauri.mjs",
      "require": "./dist/tauri.js"
    }
  }
}